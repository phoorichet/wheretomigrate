<h1>Listing crimes</h1>

<table>
  <tr>
    <th>City</th>
    <th>Population</th>
    <th>Total law enforcement employees</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @crimes.each do |crime| %>
  <tr>
    <td><%= crime.city_id %></td>
    <td><%= crime.population %></td>
    <td><%= crime.total_law_enforcement_employees %></td>
    <td><%= link_to 'Show', crime %></td>
    <td><%= link_to 'Edit', edit_crime_path(crime) %></td>
    <td><%= link_to 'Destroy', crime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

